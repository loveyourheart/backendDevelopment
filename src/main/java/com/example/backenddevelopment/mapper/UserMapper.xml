<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.backenddevelopment.mapper.UserMapper">
    <insert id="addUser" parameterType="com.example.backenddevelopment.daoimp.User"
            useGeneratedKeys="true" keyProperty="id">
        INSERT INTO user(name,password) VALUES (#{name},#{password})
    </insert>
    <select id="getUserById" parameterType="int" resultType="com.example.backenddevelopment.daoimp.User">
        SELECT * FROM user WHERE id=#{id}
    </select>
</mapper>